{
  "name": "@codecapers/lacky",
  "version": "0.0.2",
  "description": "A CLI tool to run a GitHub Actions Workflow locally",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
