    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "bin": {
    "lacky": "./dist/index.js"
  }
}
