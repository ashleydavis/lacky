{
  "name": "@codecapers/lacky",
  "version": "0.0.1",
  "description": "A CLI tool to run a GitHub Actions Workflow locally",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "clean": "rm -rf dist bin",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "compile": "tsc",
    "compile:watch": "tsc --watch --preserveWatchOutput",
    "build-linux": "bun build --compile --minify --sourcemap --target=bun-linux-x64-baseline --outfile bin/x64/linux/lacky ./src/index.ts",
    "build-win": "bun build --compile --minify --sourcemap --target=bun-windows-x64 --outfile bin/x64/win/lacky.exe ./src/index.ts",
    "build-mac-x64": "bun build --compile --minify --sourcemap --target=bun-darwin-x64 --outfile bin/x64/mac/lacky ./src/index.ts",
    "build-mac-arm64": "bun build --compile --minify --sourcemap --target=bun-darwin-arm64 --outfile bin/arm64/mac/lacky ./src/index.ts"
  },
  "keywords": [
    "github",
    "workflow",
    "actions"
  ],
  "author": "ashley@codecapers.com.au",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^11.1.0",
    "inquirer": "^12.10.0",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "bin": {
    "lacky": "./dist/index.js"
  }
}
